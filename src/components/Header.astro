---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>

		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>

		<div class="social-links">
			<a href="https://twitter.com/ramansaini90" target="_blank">
				<span class="sr-only">Follow Me on Twitter</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
					<path
						fill="currentColor"
						d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"
					></path>
				</svg>
			</a>

			<a href="https://www.linkedin.com/in/ramansaini90" target="_blank">
				<span class="sr-only">Connect with Raman on LinkedIn</span>
				<svg viewBox="0 0 24 24" aria-hidden="true" width="32" height="32">
					<path
						fill="currentColor"
						d="M4.98 3.5c0 1.38-1.12 2.5-2.49 2.5C1.12 6 0 4.88 0 3.5 0 2.12 1.12 1 2.49 1 3.86 1 4.98 2.12 4.98 3.5zM.24 8h4.5V24h-4.5V8zm7.98 0h4.31v2.18h.06c.6-1.14 2.08-2.34 4.28-2.34 4.58 0 5.43 3 5.43 6.9V24h-4.5v-7.73c0-1.84-.03-4.2-2.56-4.2-2.56 0-2.95 2-2.95 4.07V24h-4.5V8z"
					></path>
				</svg>
			</a>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}

	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 0.5em 0; /* FIXED: reduces giant underline gap */
	}

	/* ALIGN INTERNAL LINKS */
	.internal-links {
		display: flex;
		align-items: center;
		gap: 1em;
	}

	/* ALIGN SOCIAL ICONS */
	.social-links {
		display: flex;
		align-items: center;
		gap: 0.75em;
	}

	nav a {
		padding: 0.25em 0.5em 0.4em; /* FIXED: makes underline sit close to text */
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}

	nav a.active {
		border-bottom-color: var(--accent);
	}

	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
