<style>
  :global(body) {
    background: #fefbf6;
  }

  .page {
    max-width: 1240px;
    margin: 0 auto;
    padding: 2.5rem 1.5rem 4rem;
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .hero {
    background: linear-gradient(135deg, #fff7ed 0%, #e0f2fe 100%);
    border-radius: 24px;
    padding: 2.5rem;
    display: grid;
    grid-template-columns: 1.3fr 1fr;
    gap: 2rem;
    box-shadow: 0 18px 40px rgba(15, 23, 42, 0.08);
  }

  .hero-text h1 {
    margin: 0.5rem 0 0.8rem;
    font-size: clamp(2.4rem, 4vw, 3rem);
    color: #0f172a;
  }

  .lede {
    margin: 0;
    color: #475569;
    font-size: 1.05rem;
    line-height: 1.7;
  }

  .actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin: 1.4rem 0 1.6rem;
  }

  .button {
    border-radius: 999px;
    padding: 0.65rem 1.2rem;
    font-weight: 600;
    text-decoration: none;
    font-size: 0.95rem;
    border: 1px solid #fbbf24;
    background: linear-gradient(90deg, #fbbf24, #f97316);
    color: #0f172a;
    box-shadow: 0 10px 25px rgba(249, 115, 22, 0.18);
    transition: transform 0.15s ease, box-shadow 0.2s ease, filter 0.2s ease;
  }

  .button:hover {
    transform: translateY(-1px);
    filter: brightness(1.03);
  }

  .stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: 1rem;
    margin-top: 0.5rem;
  }

  .stat-number {
    font-size: 1.4rem;
    font-weight: 700;
    color: #0f172a;
  }

  .stat-label {
    color: #475569;
    font-size: 0.95rem;
  }

  .hero-media {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .portrait {
    overflow: hidden;
    border-radius: 20px;
    box-shadow: 0 16px 40px rgba(15, 23, 42, 0.15);
  }

  .portrait img {
    width: 100%;
    height: auto;
    display: block;
  }

  .panel {
    background: white;
    border-radius: 20px;
    padding: 2.25rem;
    box-shadow: 0 12px 30px rgba(15, 23, 42, 0.08);
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-size: 0.75rem;
    color: #f97316;
    margin: 0 0 0.3rem;
    font-weight: 700;
  }

  h2 {
    margin: 0 0 0.6rem;
    color: #0f172a;
    font-size: clamp(1.6rem, 3vw, 2.1rem);
  }

  p {
    color: #475569;
    line-height: 1.7;
  }

  .list {
    display: grid;
    gap: 1rem;
    grid-template-columns: 1fr;
  }

  .list-item {
    background: #f8fafc;
    border: 1px solid #e2e8f0;
    border-radius: 14px;
    padding: 1.25rem 1.35rem;
  }

  .list-item h3 {
    margin: 0 0 0.35rem;
    color: #0f172a;
    font-size: 1.05rem;
  }

  .timeline {
    background: white;
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 12px 30px rgba(15, 23, 42, 0.08);
  }

  .timeline-header h2 {
    margin-bottom: 0.2rem;
  }

  .timeline-sub {
    margin: 0;
    color: #64748b;
  }

  .timeline-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .card {
    border: 1px solid #e2e8f0;
    border-radius: 14px;
    padding: 1.25rem 1.35rem;
    background: #f8fafc;
  }

  .card-title {
    margin: 0 0 0.25rem;
    font-weight: 700;
    color: #0f172a;
  }

  .card-meta {
    margin: 0 0 0.5rem;
    color: #64748b;
    font-size: 0.95rem;
  }

  .card ul {
    margin: 0;
    padding-left: 1.1rem;
    color: #475569;
    display: grid;
    gap: 0.35rem;
    line-height: 1.5;
  }

  .pill-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .pill-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .pill {
    background: #f4f6fb;
    border: 1px solid #e5e7eb;
    border-radius: 999px;
    padding: 0.45rem 0.75rem;
    color: #0f172a;
    font-weight: 600;
    font-size: 0.95rem;
    box-shadow: 0 6px 16px rgba(15, 23, 42, 0.07);
  }

  .tools {
    grid-template-columns: 1.4fr 0.9fr;
  }

  .muted {
    color: #475569;
    margin: 0.2rem 0 0;
  }

  .compact .pill {
    font-size: 0.9rem;
  }

  @media (max-width: 900px) {
    .hero {
      grid-template-columns: 1fr;
    }
    .panel {
      grid-template-columns: 1fr;
    }
    .pill-section {
      grid-template-columns: 1fr;
    }
    .tools {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .page {
      padding: 1.75rem 1rem 3rem;
      gap: 2rem;
    }
    .hero {
      padding: 1.75rem;
    }
    .actions {
      flex-direction: column;
      align-items: stretch;
    }
    .actions .button {
      text-align: center;
    }
    .stats {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }
</style>
